<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".omuz">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightPrimary">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/cloth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_BaslikKafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T-Shirt Bedenimi Bul"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />


        <EditText
            android:id="@+id/tv_omuz_olcu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:hint="Göğüs Ölçünüzü Giriniz..."
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/tv_BaslikKafa"
            app:layout_constraintStart_toStartOf="@+id/tv_BaslikKafa"
            app:layout_constraintTop_toBottomOf="@+id/tv_BaslikKafa" />

        <EditText
            android:id="@+id/tv_omuz_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:hint="Bel Ölçünüzü Giriniz...."
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/tv_omuz_olcu"
            app:layout_constraintStart_toStartOf="@+id/tv_omuz_olcu"
            app:layout_constraintTop_toBottomOf="@+id/tv_omuz_olcu" />

        <Button
            android:id="@+id/btn_ic_kadin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:text="ERKEK SONUÇ"
            android:textSize="12sp"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintStart_toStartOf="@+id/tv_omuz_boy"
            app:layout_constraintTop_toBottomOf="@+id/tv_omuz_boy" />

        <Button
            android:id="@+id/btn_omuz_kadin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:text="KADIN SONUÇ"
            android:textSize="12sp"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_omuz_boy"
            app:layout_constraintTop_toBottomOf="@+id/tv_omuz_boy" />

        <TextView
            android:id="@+id/tv_omuz_sonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/btn_omuz_kadin"
            app:layout_constraintStart_toStartOf="@+id/btn_ic_kadin"
            app:layout_constraintTop_toBottomOf="@+id/btn_ic_kadin" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_omuz_sonuc"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>